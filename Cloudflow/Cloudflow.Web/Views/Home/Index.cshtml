@model Cloudflow.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

@section headScripts {
    @Scripts.Render("~/bundles/signalr")
    <script src="~/Scripts/Home/Index.js"></script>
}

<script>
    HomeIndex.MachineNames = [];
    @foreach (var agent in Model.AgentConfigurations)
    {
    <text>
    HomeIndex.MachineNames.push("@agent.MachineName");
    </text>
    }
</script>

<div class="jumbotron">
    <h1>Cloudflow</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Agents</h3>
            </div>
            <div class="panel-body">
                <p>
                    Use this section to control your agents.
                </p>
                @Html.ActionLink("Add", "Create", "AgentConfigurations", null, new
                   {
                       data_modal = "",
                       data_modalcontainer = "modalAgent",
                       data_modalcontent = "modalAgentContent",
                       id = "btnAdd",
                       @class = "btn btn-small btn-primary"
                   })
            </div>

            <table class="table table-striped table-bordered">
                <tr>
                    <th>Machine Name</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var agent in Model.AgentConfigurations)
                {
                    <tr>
                        <td>@agent.MachineName</td>
                        <td>
                            @{
                                if (@agent.Enabled)
                                {
                                    <a href="#" id="agentStatus-@agent.MachineName">

                                    </a>
                                }
                                else
                                {
                                    <text>Disabled</text>
                                }
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "AgentConfigurations", new { id = @agent.Id }, new
                       {
                           data_modal = "",
                           data_modalcontainer = "modalAgent",
                           data_modalcontent = "modalAgentContent",
                           @class = "btn btn-small btn-default"
                       })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", "AgentConfigurations", new { id = @agent.Id }, new
                                {
                                    data_modal = "",
                                    data_modalcontainer = "modalAgent",
                                    data_modalcontent = "modalAgentContent",
                                    @class = "btn btn-small btn-default"
                                })
                        </td>
                        <td><a href="#" class="startAgentLink" data-machinename="@(agent.MachineName)">Start Agent</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAgent" tabindex="-1" role="dialog" aria-labelledby="myModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="modalAgentContent"></div>
        </div>
    </div>
</div>

@section Scripts {
    
}
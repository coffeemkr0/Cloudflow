@model Cloudflow.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

@section headScripts {
    @Scripts.Render("~/bundles/signalr")
}

<script>
    var _agentControllerProxies = [];
    $(function () {
        @foreach (var agent in Model.AgentConfigurations)
        {
            <text>ConnectToAgent("@agent.MachineName");</text>
        }
    });

    function ConnectToAgent(machineName) {
        //Create a connetion to the agent
        var connection = $.hubConnection("http://" + machineName + ":80/CloudflowAgent/signalr");

        //For each hub we care about, create a proxy and sign up for the methods that the server will call to the client
        var agentControllerProxy = connection.createHubProxy("agentController");
        agentControllerProxy.on('addMessage', function (message) {
            AgentController_AddMessage(machineName, message);
        });

        //Open the connection
        connection.start()
            .done(function () {
                //If the connection was successful, store the proxy so we can reuse it
                _agentControllerProxies.push({ machineName: machineName, proxy: agentControllerProxy });

                //Update the status text for the agent now that we are connected to it
                SetStatusText(machineName);
            })
            .fail(function () { console.log("Could not connect to " + machineName); });
    }

    function AgentController_AddMessage(machineName, message) {
        console.log("Message from " + machineName + message);
    }

    function SetStatusText(machineName) {
        $("#agentStatus-" + machineName).text("");

        var agentControllerProxyEntry = _agentControllerProxies.find(function (item) {
            return item.machineName === machineName;
        });

        if (typeof agentControllerProxyEntry !== "undefined") {
            agentControllerProxyEntry.proxy.invoke("getAgentStatus").done(function (status) {
                $("#agentStatus-" + machineName).text(status.StatusDisplayText);
            }).fail(function (error) {
                console.log("Error: GetAgentStatus " + error);
            });
        }
    }

    function EnableJob(machineName) {
        var agentControllerProxyEntry = _agentControllerProxies.find(function (item) {
            return item.machineName === machineName;
        });

        if (typeof agentControllerProxyEntry !== "undefined") {
            agentControllerProxyEntry.proxy.invoke("enableJob").done(function () {
                
            }).fail(function (error) {
                console.log("Error: EnableJob " + error);
            });
        }
    }
</script>



<div class="jumbotron">
    <h1>Cloudflow</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Agents</h3>
            </div>
            <div class="panel-body">
                <p>
                    Use this section to control your agents.
                </p>
                @Html.ActionLink("Add", "Create", "AgentConfigurations", null, new
                   {
                       data_modal = "",
                       data_modalcontainer = "modalAgent",
                       data_modalcontent = "modalAgentContent",
                       id = "btnAdd",
                       @class = "btn btn-small btn-primary"
                   })
            </div>

            <table class="table table-striped table-bordered">
                <tr>
                    <th>Machine Name</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var agent in Model.AgentConfigurations)
                {
                    <tr>
                        <td>@agent.MachineName</td>
                        <td>
                            @{
                                if (@agent.Enabled)
                                {
                                    <a href="#" id="agentStatus-@agent.MachineName">

                                    </a>
                                }
                                else
                                {
                                    <text>Disabled</text>
                                }
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "AgentConfigurations", new { id = @agent.Id }, new
                       {
                           data_modal = "",
                           data_modalcontainer = "modalAgent",
                           data_modalcontent = "modalAgentContent",
                           @class = "btn btn-small btn-default"
                       })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", "AgentConfigurations", new { id = @agent.Id }, new
                                {
                                    data_modal = "",
                                    data_modalcontainer = "modalAgent",
                                    data_modalcontent = "modalAgentContent",
                                    @class = "btn btn-small btn-default"
                                })
                        </td>
                        <td><a href="#" class="enableJobLink" data-machinename="@(agent.MachineName)">Enable Job</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="modal fade in" id="modalAgent" tabindex="-1" role="dialog" aria-labelledby="myModal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div id="modalAgentContent"></div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $(".enableJobLink").each(function () {
            $(this).on("click", function (e) {
                var $item = $(e.target);
                var machineName = $item.attr("data-machinename");
                EnableJob(machineName);

                return false;
            });
        });
    });
</script>


@model Cloudflow.Web.ViewModels.Jobs.StepsViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Steps</h3>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Add", "", "", null, new
        {
            id = "btnAdd",
            @class = "btn btn-small btn-primary"
        })

        <table class="table table-striped table-bordered">
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var step in Model.Steps)
            {
                <tr>
                    <td>@step.Configuration.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "", "", new { id = step.Id }, new
                        {
                            @class = "btn btn-small btn-default"
                        })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "", "", new { id = step.Id }, new
                        {
                            @class = "btn btn-small btn-default"
                        })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
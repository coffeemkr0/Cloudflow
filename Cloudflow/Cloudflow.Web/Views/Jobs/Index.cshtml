@model Cloudflow.Web.ViewModels.Jobs.IndexViewModel

@{
    ViewBag.Title = "Jobs";
    ViewBag.ActivePage = "Jobs";
}

@section headScripts {
    @Scripts.Render("~/bundles/signalr")
    <script src="~/Scripts/Jobs/Index.js"></script>
}

<script>
    AgentControllerClient.Agents = [];
    @foreach (var agent in Model.AgentConfigurations)
    {
    <text>
    AgentControllerClient.Agents.push({ machineName: "@agent.MachineName", port: @agent.Port });
    </text>
    }
</script>

<input type="hidden" id="getJobDefinitionUrl" value="@Url.Action("JobDefinition")"/>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Jobs</h3>
            </div>
            <div class="panel-body">
                @Html.ActionLink("Add", "Create", "Jobs", null, new
               {
                   id = "btnAdd",
                   @class = "btn btn-small btn-primary"
               })
            </div>

            <table class="table table-striped table-bordered">
                <tr>
                    <th>Job Name</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var job in Model.JobSummaries)
                {
                    <tr>
                        <td>@job.Configuration.Name</td>
                        <td>
                            <a data-jobid="@job.Id" class="jobs__publishButton btn btn-small btn-default" href="#">
                                Publish
                            </a>
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditJob", "Jobs", new { id = @job.Id}, new
                           {
                               @class = "btn btn-small btn-default"
                           })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", "Jobs", new { id = @job.Id }, new
                           {
                               @class = "btn btn-small btn-default"
                           })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
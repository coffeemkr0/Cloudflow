@using Cloudflow.Web.HtmlHelpers;
@model Cloudflow.Web.ViewModels.Jobs.EditViewModel

@{
    ViewBag.Title = "Jobs";
    ViewBag.ActivePage = "Jobs";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
    
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.JobConfigurationViewModel.Configuration.Name</h3>
        </div>
        <div class="panel-body">
            <ul class="nav nav-tabs">
                <li role="presentation" class="active">
                    <a href="#tabGeneral" role="tab" data-toggle="tab">General</a>
                </li>
                <li role="presentation">
                    <a href="#tabTriggers" role="tab" data-toggle="tab">Triggers</a>
                </li>
                <li role="presentation">
                    <a href="#tabSteps" role="tab" data-toggle="tab">Steps</a>
                </li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="tabGeneral">
                    @Html.HiddenFor(model => model.JobConfigurationViewModel.Id)

                    @Html.ExtensionConfiguration(Model.JobConfigurationViewModel, "JobConfigurationViewModel")
                </div>

                <div role="tabpanel" class="tab-pane" id="tabTriggers">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Triggers</h3>
                        </div>
                        <div class="panel-body">
                            @Html.ActionLink("Add", "", "", null, new
                            {
                                id = "btnAdd",
                                @class = "btn btn-small btn-primary"
                            })

                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Name</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                @foreach (var trigger in Model.TriggerConfigurationViewModels)
                                {
                                    <tr>
                                        <td>@trigger.Configuration.Name</td>
                                        <td>
                                            @Html.ActionLink("Edit", "", "", new { id = trigger.Id }, new
                                               {
                                                   @class = "btn btn-small btn-default"
                                               })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "", "", new { id = trigger.Id }, new
                                               {
                                                   @class = "btn btn-small btn-default"
                                               })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane" id="tabSteps">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Steps</h3>
                        </div>
                        <div class="panel-body">
                            @Html.ActionLink("Add", "", "", null, new
                            {
                                id = "btnAdd",
                                @class = "btn btn-small btn-primary"
                            })

                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Name</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                @foreach (var step in Model.StepConfigurationViewModels)
                                {
                                    <tr>
                                        <td>@step.Configuration.Name</td>
                                        <td>
                                            @Html.ActionLink("Edit", "", "", new { id = step.Id }, new
                                       {
                                           @class = "btn btn-small btn-default"
                                       })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "", "", new { id = step.Id }, new
                                       {
                                           @class = "btn btn-small btn-default"
                                       })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="panel-footer">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

   
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@using Cloudflow.Web.Utility.HtmlHelpers
@model Cloudflow.Web.ViewModels.Jobs.EditJobViewModel

@{
    ViewBag.Title = "Edit Job";
    ViewBag.ActivePage = "Jobs";
}

@section headScripts {
    @Scripts.Render("~/bundles/jquery-ui")
    <script src="~/Scripts/Jobs/Edit.js"></script>
    @Scripts.Render("~/bundles/ExtensionConfigurationEdits")
}

<section>
    <h3>@Model.Configuration.Name</h3>

    <section>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.JobEditor(Model)
        }
    </section>
</section>

@*Render extension browser dialogs for adding extensions*@
@Html.Action("Triggers")
@Html.Action("Steps")
@Html.Action("Conditions")

@model List<Cloudflow.Web.ViewModels.Jobs.TriggerViewModel>

<section class="container-fluid">
    <div class="col-md-3 panel panel-default">
        <div class="panel-body">
            <div>
                <a data-toggle="modal" data-target="#triggersExtensionBrowser" id="btnAddTrigger" class="btn btn-default" href="#">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Add Trigger...
                </a>
            </div>

            <hr />

            <ul id="triggerNavigationItems" class="nav nav-pills nav-stacked sortable">
                @foreach (var trigger in Model)
                {
                    @Html.Partial("_TriggerNavigationItem", trigger)
                }
            </ul>
        </div>
    </div>

    <div id="triggers" class="tab-content col-md-9">
        @foreach (var trigger in Model)
        {
            @Html.Partial("_Trigger", trigger)
        }
    </div>
</section>

@*Render an extension browser for adding triggers*@
@Html.Action("Triggers")
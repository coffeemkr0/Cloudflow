@model Cloudflow.Web.ViewModels.Jobs.TriggersViewModel

<section class="container-fluid">
    <div class="col-md-3 panel panel-default">
        <div class="panel-body">
            <div>
                <a data-toggle="modal" data-target="#triggersExtensionBrowser" id="btnAddTrigger" class="btn btn-default" href="#">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Add Trigger...
                </a>
            </div>

            <hr />

            <ul id="triggerNavigationItems" class="nav nav-pills nav-stacked sortable">
                @foreach (var trigger in Model.Triggers)
                {
                    @Html.Partial("_TriggerNavigationItem", trigger)
                }
            </ul>
        </div>
    </div>

    <div id="triggerConfigurations" class="tab-content col-md-9">
        @foreach (var trigger in Model.Triggers)
        {
            <ul class="nav nav-tabs">
                <li role="presentation" class="active">
                    <a href="#tabTriggerSettings-@(trigger.Id)" role="tab" data-toggle="tab">Settings</a>
                </li>
                <li role="presentation">
                    <a href="#tabTriggerConditions-@(trigger.Id)" role="tab" data-toggle="tab">Conditions</a>
                </li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="tabTriggerSettings-@(trigger.Id)">
                    @Html.Partial("_TriggerConfiguration", trigger)
                </div>

                <div role="tabpanel" class="tab-pane" id="tabTriggerConditions-@(trigger.Id)">
                    @Html.Partial("_Conditions", Model.ConditionsViewModel)
                </div>
            </div>
        }
    </div>
</section>
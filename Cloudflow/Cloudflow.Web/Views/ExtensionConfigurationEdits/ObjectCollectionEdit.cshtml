@model Cloudflow.Web.ViewModels.ExtensionConfigurationEdits.ObjectCollectionEditViewModel

<section class="container-fluid objectCollectionEdit" id="@Model.Id" data-propertyname="@(string.Join(".", Model.PropertyNameParts))">
    <div class="col-md-3 panel panel-default">
        <div class="panel-body">
            <div>
                <a data-toggle="modal" data-target="#addItemModal@(Model.CategorizedItemSelectorId)" class="btn btn-default objectCollectionEdit__addButton" href="#">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Add @Model.LabelText...
                </a>
            </div>

            <hr />

            <ul class="nav nav-pills nav-stacked objectCollectionEdit__navigationItems">
                @foreach (var item in Model.Items)
                {
                    @Html.Partial("~/Views/ExtensionConfigurationEdits/ObjectCollectionNavigationItem.cshtml", item);
                }
            </ul>
        </div>
    </div>

    <div class="tab-content col-md-9 objectCollectionEdit__items">
        @foreach (var item in Model.Items)
        {
            @Html.Partial("~/Views/ExtensionConfigurationEdits/ObjectCollectionItem.cshtml", item);
        }
    </div>
</section>
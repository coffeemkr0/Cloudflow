@model Cloudflow.Web.ViewModels.Shared.ExtensionBrowserViewModel


<header class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="extensionBrowserModal-label">@Model.ExtensionTypeDisplayText</h4>
</header>

<div>
    <section class="modal-body">
        <nav class="">
            <h4>Libraries</h4>

            <ul class="nav nav-pills nav-stacked">
                @{ var libraryIndex = 0; }
                @foreach (var library in Model.ExtensionLibraries)
                {
                    <li>
                        <a href="#libraryTab@(libraryIndex)" role="tab" data-toggle="tab">@library.Name</a>
                    </li>
                    libraryIndex += 1;
                }
            </ul>
        </nav>

        <div class="tab-content">
            @{ libraryIndex = 0; }
            @foreach (var library in Model.ExtensionLibraries)
            {
                <div id="libraryTab@(libraryIndex)" class="tab-pane">
                    @foreach (var extension in library.Extensions)
                {
                        <div class="">
                            <img src="#" alt="Extension icon" />
                            <h5>@extension.Name</h5>
                            <p>Extension description goes here</p>
                            <button>Add</button>
                        </div>
                    }
                </div>

                libraryIndex += 1;
            }
        </div>
    </section>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>
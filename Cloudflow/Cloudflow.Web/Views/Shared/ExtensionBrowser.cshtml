@model Cloudflow.Web.ViewModels.Shared.ExtensionBrowserViewModel

<header class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="extensionBrowserModal-label">@Model.ExtensionTypeDisplayText</h4>
</header>

<div>
    <section class="modal-body">
        <div class="row">
            <nav class="col-lg-4">
                <h4>Libraries</h4>

                <ul class="nav nav-pills nav-stacked">
                    @{ var libraryIndex = 0; }
                    @foreach (var library in Model.ExtensionLibraries)
                    {
                        <li role="presentation" class="@(libraryIndex == 0 ? "active" : "")">
                            <a href="#libraryTab@(libraryIndex)" role="tab" data-toggle="tab">@library.Name</a>
                        </li>
                        libraryIndex += 1;
                    }
                </ul>
            </nav>

            <div class="col-lg-8 tab-content">
                @{ libraryIndex = 0; }
                @foreach (var library in Model.ExtensionLibraries)
                {
                    <div id="libraryTab@(libraryIndex)" class="tab-pane extensionBrowser__extensionList @(libraryIndex == 0 ? "active" : "")">
                        @foreach (var extension in library.Extensions)
                        {
                            <div class="row">
                                <div class="col-sm-2">
                                    <img src="#" alt="Extension icon" />
                                </div>
                                <div class="col-sm-8">
                                    <span>@extension.Name</span>
                                    <p>@extension.Description</p>
                                </div>
                                <div class="col-sm-2">
                                    <a href="#" class="btn btn-xs btn-success">Add</a>
                                </div>
                            </div>
                        }
                        @foreach (var extension in library.Extensions)
                        {
                            <div class="row">
                                <div class="col-sm-2">
                                    <img src="#" alt="Extension icon" />
                                </div>
                                <div class="col-sm-8">
                                    <span>@extension.Name</span>
                                    <p>@extension.Description</p>
                                </div>
                                <div class="col-sm-2">
                                    <a href="#" class="btn btn-xs btn-success">Add</a>
                                </div>
                            </div>
                        }
                    </div>

                    libraryIndex += 1;
                }
            </div>
        </div>
    </section>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>